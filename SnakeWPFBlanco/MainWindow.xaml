<Window x:Class="SnakeWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snek Stepping - Menu" Height="350" Width="242" FontFamily="Segoe WP Black" FontSize="16">
    <Grid Background="#FCEF02">
        <StackPanel>
            <Image Source="snake.PNG" Stretch="Uniform" Width="172" Margin="10"/>
            <Button x:Name="play" Content="Play" HorizontalAlignment="Center"  Width="172" Click="play_Click"/>
            <Button x:Name="exit" Content="Exit" HorizontalAlignment="Center"  Width="172" Click="exit_Click"/>
        </StackPanel>
    </Grid>
</Window>
